<!-- Login View -->
<div class="row welcome">
  <div class="col-md-5 m-auto">
    <div class="gradient-bg p-5">
      <h3 class="text-center mb-3 text-white">Login</h3>
      <%- include ("./partials/toast") %>
      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email" class="text-white text-left">Email</label>
          <input type="email" id="email" name="email" required class="form-control" placeholder="Enter Email" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4 text-center text-white">
        Create an account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>